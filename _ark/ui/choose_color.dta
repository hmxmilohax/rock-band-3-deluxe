{new
   ChooseColorPanel
   choose_color_panel
   (file
      "choose_color.milo")
   (focus colors.lst)
   (enter
      {if_else
         {==
            [current_option]
            -1}
         {do
            {closet_mgr finalized_colors}
            {ui pop_screen}}
         {$this refresh}})
   (refresh
      {switch
         [current_option]
         (0
            {choose_color_title.lbl set text_token shell_primary_color})
         (1
            {choose_color_title.lbl set text_token shell_secondary_color})
         (2
            {choose_color_title.lbl set text_token shell_tertiary_color})}
      {set
         $color_palette
         {$this get_color_palette}}
      {colors.lst set color_palette $color_palette}
      {colors.lst
         set_selected
         {$this get_current_color}}
      {colors.lst store}
      {$this set_focus colors.lst}
      {$this
         preview_color
         {colors.lst selected_pos}})
   (confirm_color
      {colors.lst confirm}
      {if_else
         {==
            [current_option]
            {-
               [num_options]
               1}}
         {do
            {closet_mgr finalized_colors}
            {ui pop_screen}}
         {do
            {'++'
               [current_option]}
            {$this refresh}}})
   (cancel_color
      {colors.lst undo $user}
      {if_else
         {==
            [current_option]
            0}
         {ui pop_screen}
         {do
            {--
               [current_option]}
            {$this refresh}}})
   (SCROLL_MSG
      {switch
         $component
         (colors.lst
            {$this
               preview_color
               {colors.lst selected_pos}})})
   (BUTTON_DOWN_MSG
      {switch
         $action
         (kAction_Confirm
            {$this confirm_color})
         (kAction_Cancel
            {$this cancel_color})
         (kAction_ViewModify
            {closet_mgr cycle_camera})
         kDataUnhandled})}
{new
   BandScreen
   choose_color_screen
   (panels choose_color_panel)
   (focus choose_color_panel)}