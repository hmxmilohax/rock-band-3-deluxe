#define DX_NEW_SPLASH_OBJ
(
   {new UIColor custom.color}
   {custom.color set color {pack_color 0.96 0.90 0.28}}

   {new BandButton splashtext.btn}
   {splashtext.btn set resource_name "pentatonic_outline"}
   {splashtext.btn set_showing TRUE}
   {splashtext.btn set_local_scale 1 1 1}
   {splashtext.btn set_local_pos 0 0 -140}
   {splashtext.btn set text_size 30}
   {splashtext.btn set alignment kMiddleCenter}
   {splashtext.btn set width 500}
   {splashtext.btn set height 30}
   {splashtext.btn set alpha 1}
   {splashtext.btn set color_override custom.color}
   {text.grp add_object splashtext.btn}
)
#define DX_INTERNAL_SPLASH_TEXT
(
   {set $old_this $this}
   {set_this {splash_panel loaded_dir}}
   {delete internalbuild.color}
   {new UIColor internalbuild.color}
   {internalbuild.color set color {pack_color 1 0 0}}
   {set_this splashtext.btn}
   {$this set color_override internalbuild.color}
   {$this set_token_fmt {sprint "INTERNAL BUILD ONLY.  DO NOT DISTRIBUTE IN ANY FORM."}}
   {set_this $old_this}
   {set $btn_width {splashtext.btn get width}}
   {splashtext.btn set text_size 22.5}
   {splashtext.btn set width {+ 200 $btn_width}}
   {splashtext.btn set_local_pos 0 0 63} ;figure out how to get the right cords somehow, this is a guess
)

